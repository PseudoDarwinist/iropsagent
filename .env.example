# IROPS Agent Environment Configuration
# Copy this file to .env and set your actual API keys and configuration

# Google AI Studio API Key
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# FlightAware AeroAPI Key
# Get from: https://www.flightaware.com/commercial/aeroapi/
FLIGHTAWARE_API_KEY=your_flightaware_api_key_here

# Amadeus Travel API Credentials
# Get from: https://developers.amadeus.com/
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here

# Database Configuration
# For production, use PostgreSQL URL
# For development, SQLite is sufficient
DATABASE_URL=sqlite:///./travel_disruption.db

# Optional: Email API Configuration for booking import
# Gmail API
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here

# Outlook API
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here

# Optional: Notification Services
# For future SMS/push notification features
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true
